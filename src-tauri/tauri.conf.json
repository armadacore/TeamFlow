{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "TeamFlow",
	"version": "0.1.0",
	"identifier": "com.armadacore.teamflow",
	"build": {
		"beforeDevCommand": "npm run vite:dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run vite:build",
		"frontendDist": "../dist",
		"postBuildCommand": "xattr -cr \"src-tauri/target/aarch64-apple-darwin/release/bundle/macos/<DeineApp>.app\""
	},
	"app": {
		"windows": [
			{
				"title": "TeamFlow",
				"minWidth": 1200,
				"minHeight": 800
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"entitlements": null,
			"exceptionDomain": null,
			"frameworks": [],
			"minimumSystemVersion": "10.14",
			"signingIdentity": null
		}
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1MUI1OThFNEJFM0U1RDUKUldUVjVlTkxqbGtibGMrT0hUOEkvdzVDNDBWd1J4RElMTk9SS2ZXR0NjbGhxWW4wempKN3pjSkoK",
			"endpoints": [
				"https://github.com/armadacore/TeamFlow/releases/latest/download/latest.json"
			]
		}
	}
}

	"productName": "TeamFlow",
	"version": "0.1.0",
	"identifier": "com.armadacore.teamflow",
	"build": {
		"beforeDevCommand": "npm run vite:dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run vite:build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "TeamFlow",
				"minWidth": 1200,
				"minHeight": 800
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
